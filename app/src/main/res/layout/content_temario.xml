<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="survivors.com.androidsurvivors2.TemarioActivity"
    tools:showIn="@layout/app_bar_temario">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:scrollbars = "vertical"
        android:scrollbarStyle="insideInset">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/tarjeta_tema1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <TextView
                        android:id="@+id/texto1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fundamentos de Programación"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/temas1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <TextView
                            android:id="@+id/tema1.1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="10dp"
                            android:text="1.- Pseudocódigo."
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tema1.2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="10dp"
                            android:text="2.- Programación estructurada y arrays."
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tema1.3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="10dp"
                            android:text="3.- Programación modular y orientada a objetos."
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tema1.4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="10dp"
                            android:text="4.- Conceptos de sobrecarga, herencia y sobreescritura."
                            android:textSize="16sp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/tarjeta_tema2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <TextView
                        android:id="@+id/texto2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Programación en Java SE"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/temas2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <TextView
                            android:id="@+id/tema2.1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="10dp"
                            android:text="1.- Sentencias de control de flujo."
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tema2.2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="10dp"
                            android:text="2.- Clases, objetos y métodos."
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tema2.3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="10dp"
                            android:text="3.- Herencia y polimorfismo."
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tema2.4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="10dp"
                            android:text="4.- Paquetes: java.lang, java.util y java.io"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tema2.5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="10dp"
                            android:text="5.- Interfaces."
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tema2.6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="10dp"
                            android:text="6.- Gestión de excepciones."
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tema2.7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="10dp"
                            android:text="7.- Multitarea: clase Thread e interfaz Runnable."
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tema2.8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="10dp"
                            android:text="8.- Persistencia de la información: ficheros y Acceso a BBDD."
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tema2.9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="10dp"
                            android:text="9.- Comunicaciones."
                            android:textSize="16sp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/tarjeta_tema3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <TextView
                        android:id="@+id/texto3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Desarrollo de aplicaciones para Android"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/temas3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <TextView
                            android:id="@+id/tema3.1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="10dp"
                            android:text="1.- Componentes de una app Android. Interfaz gráfica y componentes gráficos."
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tema3.2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="10dp"
                            android:text="2.- Actividades. Widgets."
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tema3.3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="10dp"
                            android:text="3.- Alertas y cuadros de diálogos."
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tema3.4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="10dp"
                            android:text="4.- Persistencia de la información."
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tema3.5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="10dp"
                            android:text="5.- Proveedores de contenido."
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tema3.6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="10dp"
                            android:text="6.- Comunicaciones. Accesos a recursos y servicios Web. "
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tema3.7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="10dp"
                            android:text="7.- Geolocalización y Google Maps."
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tema3.8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="10dp"
                            android:text="8.- BroadcastReceiver."
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tema3.9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="10dp"
                            android:text="9.- Servicios."
                            android:textSize="16sp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
